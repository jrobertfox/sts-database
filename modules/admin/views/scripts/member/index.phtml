                name = $(this).data('fullname'),
                removeBtn = $(this).find('.btn-danger'),
                href = removeBtn.attr('href');
                content = $('.modal-body p').html();
                $('.confirm-message').html(content.replace(/~member~/, name));
                removeBtn.attr('href', href.replace(/\?id=.*/, '?id=' + id));
        }).modal({
            backdrop: true,
            show: false
        });
    });
</script>



