<script type="text/javascript">
    $(document).ready(function() {
        $('.confirm-delete').bind('click', function(){
            var id = $(this).data('id'),
                name = $(this).data('fullname');
            $('#memberDeleteModal').data({'id': id, 'fullname': name}).modal('show');
        })
        $('#memberDeleteModal').bind('show', function() {
