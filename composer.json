{
    "require-dev": {
        "phpmd/phpmd" : "@stable"
    },
    "require":{
      "mandrill/mandrill":"*",
      "sparkpost/php-sparkpost": "~0.1.1",
      "breerly/zf1":"~1.11.11",
      "phpunit/phpunit":"~4.6",
      "emagister/zend-form-decorators-bootstrap":"dev-master",
      "mockery/mockery": "~0.9.3",
      "behat/behat":"~3.0",
      "behat/mink":"~1.6",
      "behat/mink-extension":"~2.0",
      "behat/mink-goutte-driver":"~1.0",
      "behat/mink-sahi-driver": "~1.2"
   },
   "prefer-stable":true,
   "config":{
      "bin-dir":"bin/"
   },
   "autoload":{
      "psr-0":{
         "STS":["application/src","application/tests/unit","application/tests/integration"]
      }
   }
}
