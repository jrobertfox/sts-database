<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="Bootstrap.php" colors="true">
    <!-- ALL TEST SUITES -->
    <testsuites>
        <testsuite name="Core">
            <directory>STS/Core</directory>
            <file>STS/CoreTest.php</file>
        </testsuite>
        <testsuite name="Web">
            <directory>STS/Web</directory>
        </testsuite>
        <testsuite name="Domain">
            <directory>STS/Domain</directory>
        </testsuite>
    </testsuites>
    <!-- FILTERS -->
    <filter>
        <blacklist>
            <directory suffix=".php">../integration</directory>
        </blacklist>
    </filter>
    <!-- LOGGING AND CODE COVERAGE -->
    <logging>
        <log type="coverage-html" target="../../../build/coverage/integration/"
            title="NavStore-Api" charset="UTF-8" yui="true" highlight="true"
            lowUpperBound="35" highLowerBound="70" />
        <log type="coverage-clover" target="../../../build/logs/integration/clover.xml" />
        <log type="junit" target="../../../build/logs/integration/junit.xml"
            logIncompleteSkipped="false" />
    </logging>
</phpunit>